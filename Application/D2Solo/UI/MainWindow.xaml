<NavigationWindow x:Class="D2Solo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:D2Solo"
        mc:Ignorable="d"
        Title="MainWindow"
        Source="MainPage.xaml"
        Height="75" 
        Width="275" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        Activated="Window_Activated"
        Deactivated="Window_Deactivated">
    
    <NavigationWindow.Background>
        <LinearGradientBrush StartPoint="0.5, 0" EndPoint="0.5, 1">
            <GradientStop Color="#FF646464" Offset="0.0"/>
            <GradientStop Color="Tan" Offset="0.25"/>
            <GradientStop Color="Tan" Offset="0.75"/>
            <GradientStop Color="#FF646464" Offset="1"/>
        </LinearGradientBrush>
    </NavigationWindow.Background>
</NavigationWindow>
